<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/order_line_list_item_new_disposition_product_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/separator_margin"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/order_line_list_item_new_disposition_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/h6"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_line_list_item_new_disposition_product_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/h6" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_line_list_item_new_disposition_discount_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:textSize="@dimen/h6" />

            <TextView
                android:id="@+id/order_line_list_item_new_disposition_price_net"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/separator_margin"
                android:textColor="@color/green"
                android:textSize="@dimen/h6" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/order_line_list_item_new_disposition_quantity_uos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/h6" />

        <TextView
            android:id="@+id/order_line_list_item_new_disposition_unit_uos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/midban_abc_search_url_text"
            android:textSize="@dimen/h6" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/order_line_list_item_new_disposition_quantity_uom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/h6" />

        <TextView
            android:id="@+id/order_line_list_item_new_disposition_unit_uom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/midban_abc_search_url_text"
            android:textSize="@dimen/h6" />

    </LinearLayout>

    <TextView
        android:id="@+id/order_line_list_item_new_disposition_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/h6"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/order_line_list_item_new_disposition_discount"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/h6" />

    <TextView
        android:id="@+id/order_line_list_item_new_disposition_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="end"
        android:textSize="@dimen/h6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <ImageView
        android:id="@+id/order_line_list_item_new_disposition_delete_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:src="@drawable/general_eliminar" />

</LinearLayout>